{% if invalid_username is defined %}
    <div class="col-lg-12">
        <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4>Fehler!</h4>
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        </div>
    </div>
{% endif %}

<div class="col-lg-4">
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title"><strong>Passwort zurücksetzen</strong></h3></div>
        <div class="panel-body">

            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" role="form" class="fos_user_resetting_request">
                <div class="form-group{{ invalid_username is defined ? ' has-error' : ''}}">
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" id="_submit" name="_submit" class="btn btn-sm btn-default">
                        {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>