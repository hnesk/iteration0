{% extends '::base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block content_container %}
    <div class="row">
        <div class="col-md-7">
            {% block content%}
            <div class="page-header">
                <h1>{{ page.title }}</h1>
            </div>
            {{ page.content|raw }}
            {% endblock content%}
        </div>
        <div class="col-md-5">
            {% block sidebar %}
            {% endblock sidebar %}
        </div>
    </div>
{% endblock content_container %}

